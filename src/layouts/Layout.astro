---
import Header from '../components/Layout/Header.astro'
import Footer from '../components/Layout/Footer.astro'
import { ViewTransitions } from 'astro:transitions';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Cecilia Torres-Tanatóloga" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="/image/svg+xml" href="./images/icon.svg" />

		<meta property="og:title" content="Cecilia Torres - Tanatóloga" />
		<meta property="og:type" content="blog" />
		<meta property="og:description" content="Cecilia Torres. Acompañamiento en Procesos de duelo" />
		<meta property="og:image" content="https://ceciliatorres.com.ar//images/webimg.png" />
		<meta property="og:url" content="https://ceciliatorres.com.ar/" />

		<!-- font -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@200;300;400;600;700;900&display=swap" rel="stylesheet"/>
		<link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>


<style is:global>
	:root {
		--main-color: #1e1c21;
		--main-color-50: #1e1c217a;
		--second-color: rgba(255, 201, 201, 0.5);
		--third-color: #dbeae5;
		--main-bg: #fbfbfb;
		--second-bg: rgba(255, 201, 201, 0.5);
		--main-border: rgba(0, 0, 0, 0.2);
		--main-filter: invert(7%) sepia(14%) saturate(667%) hue-rotate(222deg)
			brightness(91%) contrast(89%);
	}

	@font-face {
		font-family: moneta;
		src: url(/fonts/Moneta-Regular.ttf);
		font-weight: 400;
	}

	@font-face {
		font-family: moneta;
		src: url(/fonts/Moneta-Bold.ttf);
		font-weight: 600;
	}

	#root {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: space-between;
		min-height: 100vh;
		width: 100vw;
		background-color: var(--main-bg);
		scroll-behavior: smooth;
	}

	* {
		font-family: "Source Sans Pro", sans-serif;
		font-family: "Raleway", sans-serif;
		font-size: 16px;
		font-weight: 400;
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		color: var(--main-color);
		scroll-behavior: smooth;
		/* background-color: var(--main-bg); */
	}

	a {
		text-decoration: inherit;
	}

	h1 {
		font-family: "moneta", serif;
		font-size: 2.5rem;
		line-height: 4rem;
		font-weight: 500;
		margin: 2rem 0;
	}

	h3 {
		font-family: "Source Sans Pro", sans-serif;
		font-family: "moneta", serif;
		font-weight: 500;
		font-weight: 300;
		font-size: 1.8rem;
		line-height: 1.8rem;
		margin: 2rem 0;
	}

	.mainSection {
		padding: 0 5rem;
		max-width: 1500px;
		min-height: calc(100vh - 4rem - 3rem - 2rem);
		margin: 0 auto;
		text-align: center;
		/* border: solid 1px red;   */
		align-self: flex-start !important;
	}
</style>
